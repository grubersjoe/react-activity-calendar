{
  "name": "react-activity-calendar",
  "version": "3.1.1",
  "description": "React component to display activity data in calendar",
  "author": "Jonathan Gruber <gruberjonathan@gmail.com>",
  "license": "MIT",
  "homepage": "https://grubersjoe.github.io/react-activity-calendar/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grubersjoe/react-activity-calendar.git"
  },
  "exports": {
    ".": "./build/index.js",
    "./tooltips.css": "./build/tooltips.css"
  },
  "type": "module",
  "types": "build/index.d.ts",
  "files": [
    "build",
    "src",
    "README.md",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:storybook": "storybook build -o docs/ && touch docs/.nojekyll",
    "bundlesize": "pnpm install && EXTERNAL_DEPS=false pnpm build && open bundle.html",
    "check": "pnpm install --frozen-lockfile && pnpm exec prettier -c . && pnpm exec tsc && pnpm lint && pnpm test:unit",
    "dev": "storybook dev -p 9000",
    "format": "prettier --write .",
    "lint": "eslint .",
    "postbuild": "dts-bundle-generator src/index.tsx -o build/index.d.ts --no-check --no-banner --external-imports react date-fns @floating-ui/react",
    "prebuild": "rm -rf build/*",
    "prepare": "husky",
    "prepublishOnly": "pnpm check && pnpm build",
    "react-docgen": "pnpm dlx @react-docgen/cli src/components/ActivityCalendar.tsx | jq '.[\"src/components/ActivityCalendar.tsx\"][0]'",
    "start": "rollup -c -w",
    "test": "pnpm test:unit && pnpm test:visual",
    "test:unit": "jest",
    "test:visual": "docker compose run -p 9001:9001 --rm playwright bash -c 'npm install --silent --no-package-lock && npx playwright test'",
    "test:visual:update": "docker compose run --rm playwright bash -c 'npm install --silent --no-package-lock && npx playwright test --update-snapshots'"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.12",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.30.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@jest/globals": "^30.0.3",
    "@jest/types": "^30.0.1",
    "@playwright/test": "^1.58.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.2",
    "@storybook/addon-docs": "^10.0.7",
    "@storybook/addon-links": "^10.0.7",
    "@storybook/react-vite": "^10.0.7",
    "@types/react": "^19.2.5",
    "@vitejs/plugin-react": "^5.1.1",
    "@vueless/storybook-dark-mode": "^10.0.2",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.30.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-storybook": "^10.0.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "prettier": "^3.6.2",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.1.0",
    "react-docgen": "^8.0.2",
    "react-ga4": "^2.1.0",
    "rollup": "^4.44.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass-embedded": "^1.93.2",
    "storybook": "^10.0.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ]
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version"
  ]
}
